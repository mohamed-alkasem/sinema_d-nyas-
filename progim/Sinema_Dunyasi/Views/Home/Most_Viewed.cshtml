    <script>
        document.querySelectorAll('.star-rating').forEach(rating => {
            const stars = rating.querySelectorAll('.fas');
            stars.forEach(star => {
                star.addEventListener('mouseover', () => {
                    resetStars(rating);
                    highlightStars(star);
                });
                star.addEventListener('click', () => {
                    rating.setAttribute('data-rating', star.getAttribute('data-value'));
                    resetStars(rating);
                    highlightStars(star, true);
                });
                rating.addEventListener('mouseleave', () => {
                    const currentRating = rating.getAttribute('data-rating');
                    resetStars(rating);
                    if (currentRating > 0) {
                        highlightStars(stars[currentRating - 1], true);
                    }
                });
            });
        });
        function resetStars(rating) {
            rating.querySelectorAll('.fas').forEach(star => {
                star.classList.remove('selected');
            });
        }
        function highlightStars(star, select = false) {
            const ratingValue = parseInt(star.getAttribute('data-value'), 10);
            const parent = star.closest('.star-rating');
            parent.querySelectorAll('.fas').forEach(s => {
                if (parseInt(s.getAttribute('data-value'), 10) <= ratingValue) {
                    s.classList.add(select ? 'selected' : 'hover');
                }
            });
        }
