@model IEnumerable<Sinema_Dunyasi.Models.Domain.Contact>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*------- Jquery DataTables 16 ------------*@

<section id="contact-list">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h2 class="text-center mb-2">Gelen Mesajlar</h2><br />
                <div style="width: 100%;height: 3px;background-color: #27ae60;" class="hr mb-5"></div>
            </div>
        </div>

        <div class="table-container">
            <table id="contactTable" class="table display">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Mesaj</th>
                        <th>Gönderilme Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>@contact.FullName</td>
                            <td>@contact.Email</td>
                            <td style="word-wrap: break-word; white-space: pre-wrap; max-width: 400px; margin: 0;">@contact.Message</td>
                            <td>@contact.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@*------- Jquery DataTables 16 ------------*@

@section Scripts {
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> *@

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function() {
            $('#contactTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [10, 25, 50, 100],
                "order": [[3, "desc"]],
                "language": {
                    "search": "Ara:",
                    "lengthMenu": "Göster _MENU_ kayıt",
                    "info": "Gösterilen _START_ - _END_ arasında _TOTAL_ kayıttan",
                    "paginate": {
                        "first": "İlk",
                        "last": "Son",
                        "next": "Sonraki",
                        "previous": "Önceki"
                    }
                }
            });
        });
    </script>

    <style>
        .dataTables_wrapper .dataTables_paginate,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info {
            color: white;
        }

            .dataTables_wrapper .dataTables_length select,
            .dataTables_wrapper .dataTables_filter input {
                color: white; 
                background-color: transparent;
                border: 1px solid white;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button {
                color: white !important; 
                background-color: transparent;
                border: 1px solid white;
                margin: 0 2px;
            }

                .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                    background-color: white;
                    color: black !important;
                }
        .dataTables_length select {
            color: black !important; 
            background-color: white !important; 
            border: 1px solid black; 
        }

            .dataTables_length select option {
                color: black; 
                background-color: white; 
            }

    </style>
}


